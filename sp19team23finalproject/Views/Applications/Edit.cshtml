@model sp19team23finalproject.Models.Application

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationID" />
            @if (User.IsInRole("Student"))
            {
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                        </label>
                    </div>
                </div>
            }



            @if (User.IsInRole("Recruiter") || User.IsInRole("CSO"))
            {
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Accepted" /> @Html.DisplayNameFor(model => model.Accepted)
                        </label>
                    </div>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

