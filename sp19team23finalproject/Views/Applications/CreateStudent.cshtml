@model sp19team23finalproject.Models.Application

@{
    ViewData["Title"] = "Create a Student's Application'";
}

<h2>Create</h2>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Positions</label>
                @Html.DropDownList("SelectedPosition", (SelectList)ViewBag.AllPositions, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Students</label>
                @Html.DropDownList("SelectedStudent", (SelectList)ViewBag.AllStudents, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Accepted" /> @Html.DisplayNameFor(model => model.Accepted)
                    </label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

