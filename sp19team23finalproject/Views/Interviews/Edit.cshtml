@using sp19team23finalproject.Controllers
@model sp19team23finalproject.Models.Interview

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Interview</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InterviewID" />
            @if (User.IsInRole("CSO")||User.IsInRole("Recruiter") )
            {
            <div class="form-group">
                <label asp-for="InterviewDate" class="control-label"></label>
                <input asp-for="InterviewDate" class="form-control" />
                <span asp-validation-for="InterviewDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Interview Time:</label><br />
                <label class="radio">@Html.RadioButton("InterivewTiime", InterviewTime.time8, true) 8:00 AM</label><br />
                <label class="radio">@Html.RadioButton("InterivewTiime", InterviewTime.time9) 9:00 AM</label>
                <label class="radio">@Html.RadioButton("InterivewTiime", InterviewTime.time10) 10:00 AM</label>
                <label class="radio">@Html.RadioButton("InterivewTiime", InterviewTime.time11) 11:00 AM</label>
                <label class="radio">@Html.RadioButton("InterivewTiime", InterviewTime.time1) 1:00 PM</label>
                <label class="radio">@Html.RadioButton("InterivewTiime", InterviewTime.time2) 2:00 PM</label>
                <label class="radio">@Html.RadioButton("InterivewTiime", InterviewTime.time3) 3:00 PM</label>
                <label class="radio">@Html.RadioButton("InterivewTiime", InterviewTime.time4) 4:00 PM</label>
            </div>

            }
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="InterviewStatus" /> @Html.DisplayNameFor(model => model.InterviewStatus)
                    </label>
                </div>
            </div>

            @if (User.IsInRole("CSO")||User.IsInRole("Recruiter") )
            {
            <div class="form-group">
                <label asp-for="InterviewRoom" class="control-label"></label>
                <input asp-for="InterviewRoom" class="form-control" />
                <span asp-validation-for="InterviewRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Recruiter:</label>
                @Html.DropDownList("SelectedRecruiter", (SelectList)ViewBag.AllRecruiters, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Position:</label>
                @Html.DropDownList("SelectedPosition", (SelectList)ViewBag.AllPositions, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Company:</label>
                @Html.DropDownList("SelectedCompany", (SelectList)ViewBag.AllCompanies, new { @class = "form-control" })
            </div>


            <div class="form-group">
                <label class="control-label">Student:</label>
                @Html.DropDownList("SelectedStudent", (SelectList)ViewBag.AllStudents, new { @class = "form-control" })
            </div>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

