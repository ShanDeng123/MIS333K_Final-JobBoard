@model IEnumerable<sp19team23finalproject.Models.Interview>

@{
    ViewData["Title"] = "Index";
}

<h2>Interviews</h2>
@if (!User.IsInRole("Student"))
{
<p>
    <a asp-action="Create">Create New</a>
</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position.Company.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterviewDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterviewTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterviewStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterviewRoom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Company.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterviewDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterviewTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterviewStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterviewRoom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InterviewID">Edit</a> |

                @if (User.IsInRole("CSO")||User.IsInRole("Recruiter") )
                {
                    <a asp-action="Details" asp-route-id="@item.InterviewID">Details</a> 
                }

            </td>
        </tr>
}
    </tbody>
</table>
